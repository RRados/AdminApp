<!DOCTYPE html>
<html  lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" data-bs-theme="dark" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <title>@ViewBag.Title</title>
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="black">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap-icons" />
    <link href="~/lib/bootstrap-5.3.0-alpha1/css/"/>    
    <link href="~/lib/bootstrap/dist/css/"/> 
    <link href="~/fonts/Poppins-Light.ttf"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mb-3" style="background: #212529" ;>
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span >Radoš</span>
                </button>



                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if(User.IsInRole("Admin"))
                        {                            
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }                     
                    </ul>

                    <ul class="navbar-nav">

                        @if (User.Identity.IsAuthenticated && (User.IsInRole("User") || User.IsInRole("Admin")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-area="" asp-controller="Login" asp-action="SignOutUser">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-area="" asp-controller="Login" asp-action="Register">Register</a>
                            </li>
                        }                    
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-secondary" style="background: #212529";>
        <div class="container text-muted">
            Radoš
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/JavaValidacioneSkripte/ValidateScript.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-5.3.0-alpha1/js/"></script>
    <script src="~/lib/bootstrap-5.3.0-alpha1/js/bootstrap.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/site.js" asp-append-version="true"></script>

    @{
        await RenderSectionAsync("Scripts", required: false);
    }

</body>
</html>