@model AdminApp.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-md w-75 mt-5">

    @if (TempData["LoginFailed"] != null)
    {
        <h5 class="container alert bg-transparent border border-info text-info border-success text-center">Neuspesno - Probajte opet! @TempData["LoginFailed"]</h5>
    }


    <form asp-controller="Login" asp-action="Login" runat="server" class="container p-3" formnovalidate>

        <div class="card border border-info mx-auto mt-5 shadow shadow-lg" style="width: 20em; background:#2b2d3a;">
          
            <div class="card-header border-0 mt-2">
                <h2 class="text-white-50">Login</h2>
                    <hr class="bg-info" />
            </div>

            <div class="card-body">
         
                <div>
                    <label asp-for="Email"aria-describedby="emailHelp" class="row-form-label text-white-50">Email</label>
                    <input asp-for="Email" type="email" id="exampleInputEmail1" class="form-control bg-dark text-white-50 bg-transparent border-end-0 border-start-0 border-top-0" validate required>
                </div>         
           
                <div class="mt-4">
                    <label asp-for="Password" for="inputPassword3" class="row-form-label text-white-50">Password</label>
                    <input asp-for="Password" type="password" autocomplete="on" id="inputPassword3" class="form-control bg-dark text-white-50 bg-transparent border-end-0 border-start-0 border-top-0" validate required>
                </div>       
        
                <div class="form-check mt-5">
                    <input class="form-check-input text-white-50" type="checkbox" id="gridCheck1">
                    <label class="form-check-label text-white-50" for="gridCheck1">
                        Zapamti me!
                    </label>
                </div>
                
                <div class="mt-3">
                    <a asp-controller="Login" asp-action="Register" class="form-check-label offset-1 text-white-50" validate required>Registruj se!</a>
                </div>
            </div>
        
            <div class="card-footer mt-2 mb-3 border-0">
                <button type="submit" class="btn btn-outline-info">Sign in</button>
            </div>
        </div>
 
    </form>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
    }


}